<% include partials/header %>

<div class="row">
	<h1 class="h1-align-form"> Sign in </h1>
</div>
<div class="container">
	<div class="div-form">
		<a href="/auth/google" class="btn btn-block btn-social btn-google">
		<span class="fa fa-google"></span> Sign in with Google</a>
		<form action="/login" method="POST">
		<div class="form-group">
			<input class="form-control" type="text" name="username" placeholder="email">
		</div>
		<div class="form-group">
			<input class="form-control" type="password" name="password" placeholder="password">
		</div>
		<button class="btn btn-success btn-sm">Login</button>
		<a class="register" href="/register">Create an account</a>
</form>
	</div>
</div>


